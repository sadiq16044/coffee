<body style="background-color: black;">

    <div id="circle-3" data-circle-dialWidth=10 data-circle-skin="white">
        <div class="loader-bg">
            <div class="text">0%</div>
        </div>
    </div>

    <center>
        <p style="margin-top: 50px; color: #540e08">Temperature</p>
    </center>
    <div class="new_html_code"></div>
    <div id="shape" name="temp" class="circle">
    </div>
</body>

<script shape="text/javascript">
    function tooltipLabel(args) {
        console.log('Here')
        return args.value + " <br><br> Â°C";
    }
    $(document).ready(function() {

        new Circlebar({
            element: "#circle-3",
            maxValue: 100,
            size: "240px",
            fontSize: "30px",
            type: "progress"
        });

        $.fn.roundSlider.prototype._handleDragDistance = 270;
        let width = screen.width / 8;
        $("#shape").roundSlider({
            svgMode: true,
            handleShape: "round",
            handleSize: 10,
            showTooltip: true,
            editableTooltip: false,
            min: 84,
            max: 96,
            step: 0.1,
            value: 88,
            sliderType: "min-range",
            startAngle: 90,
            endAngle: 90,
            radius: width,
            borderWidth: 0,
            width: 30,
            tooltipColor: '#FFFFFF',
            rangeColor: '#540e08',
            pathColor: '#735654',
            lineCap: 'round',
            tooltipFormat: "tooltipLabel",
            change: function(args) {
                console.log(args.value);
            }
        });
    });

    function sliderShapeChanged(e) {
        var options = {
            circleShape: e.value
        };
        if (e.value == "pie") options["startAngle"] = 0;
        else if (e.value == "custom-quarter" || e.value == "custom-half") options["startAngle"] = 45;
        $("#shape").roundSlider(options);
    }
</script>


<style>
    .circle {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
    
    #shape .rs-tooltip-text {
        color: #540e08 !important;
        font-size: 30px;
        font-weight: bold;
    }
</style>

</html>