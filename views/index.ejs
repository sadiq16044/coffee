<!DOCTYPE html>
<html>

<head>
    <title>RoundSlider</title>
    <script src="/js/jquery-1.11.3.min.js"></script>
    <link href="/js/roundslider.min.css" rel="stylesheet" />
    <script src="/js/roundslider.min.js"></script>
    <link href="/fonts/fonts.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/bootstrap/bootstrap.css">
    <script src="/js/bootstrap.min.js"></script>
</head>

<body style="background-color: wheat;">
    <br><br><br><br><br><br>
    <div class="container">
        <h1>Serial Test</h1>
        <br><br><br><br><br><br>
        <center>
            <div>
                <button class="btn btn-danger" style="width: 200px;" onclick="send(4,12.3)" id="send">send temperature</button>
            </div>
            <br><br>
            <div>
                <button class="btn btn-primary" style="width: 200px;" onclick="send(5,9.3)" id="send">send pressure</button>
            </div>
            <br><br>
            <div>
                <button class="btn btn-dark" style="width: 200px;" onclick="send(6,15.6)" id="send">send delivery time</button>
            </div>
            <br><br>
            <div>
                <button class="btn btn-secondary" style="width: 200px;" onclick="receive()" id="send">Receive data</button>
                <br><br>
                <p id="data"></p>
            </div>
        </center>
    </div>

</body>

<style>
    #data {
        color: blueviolet;
        font-size: 24px;
    }
</style>

<script>
    function send(order, value) {
        console.log('send')
        $.post("http://localhost:3003/send", {
                value: `${order}<${value}>`,
            },
            function(data, status) {
                $('#data').text = data;
            });
    }

    function receive() {
        console.log('receive')
        $.post("http://localhost:3003/receive", {
                value: "<temperature 48.90>",
            },
            function(data, status) {
                $('#data').text(data);
            });
    }
</script>

</html>